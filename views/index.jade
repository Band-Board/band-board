extends ./layout.jade

block content
    main
      .jumbotron
        h1.invisiDot .
        .callToAction
          .largeCopy
            p Never Miss
            p A Show
          .smallerCopy
            p Stumptown retro helvetica, gluten-free health goth etsy tacos DIY wayfarers disrupt irony yuccie pug. 3 wolf moon gastropub twee roof party forage microdosing.
          if (!currentUser)
            a(href="/login").waves-effect.waves-light.btn-large
              i.material-icons.left account_circle
              span Log-In
            a(href="/signup").waves-effect.waves-light.btn-large
              i.material-icons.left add_circle_outline
              span Sign-Up
