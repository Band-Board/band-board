.input-field.col.s12
    label(for='title') Event title
    input(id='title', type="text", name="title", value="#{event.title}")
.input-field.col.s12
    label(for='datetime') Date
    textarea.materialize-textarea(id="datetime", name="datetime")= event.datetime
.input-field.col.s6
    label(for='venue') Venue
    input(id="venue" type="text", name="venue",
    value="#{event.venue}")
.input-field.col.s6
    label(for='formatted_location') Event Address
    input(id='formatted_location', type="text", name="formatted_location",
    value="#{event.address}")
button.btn.waves-effect.waves-light(type="submit" name='action') Submit
        i.material-icons.right send
