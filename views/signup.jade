extends ./layout.jade

block content
  .login-container
    include ./error.jade
    .center-align
      img(class='largeLogo' src='./images/largelogo.png')
    .row
      .col.s5.vert.offset-s1
        .row
          .localLogin.col.s12
            h4 Sign-Up
            form.col.s12(name="signUp", method="post", action='/signup')
              include ./_loginform.jade
      .loginRemote.col.s5
        h4 Via Social Media
        ul
          li.center-align
            a.socialLogin.waves-effect.waves-light.btn-large(href='#') Sign Up Via Facebook
          li.center-align
            a.socialLogin.waves-effect.waves-light.btn-large(href='/auth/twitter') Sign Up Via Twitter
          li.center-align
            a.socialLogin.waves-effect.waves-light.btn-large(href='#') Sign Up Via Spotify
  .loginBack
