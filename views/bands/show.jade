include ../layout.jade

block content

  ul
    li
      h1(id="bandName")= band.name
    li= band.bio
    li
      img(src=band.img)
    li
      a(href=band.website) Band website
  br
  a(href='/bands') Back to Bands

  div(id='calendar')

script.
      $(document).ready(function() {
          var bandEvents = searchEventsInTown();

          var JSON = [{
            "title" : bandEvents[0].title,
            "start" : "2016-2-15 22:20:00",
            "allDay" : true
                  }
          ];
          $('#calendar').fullCalendar({
            events: JSON
          })
      });


