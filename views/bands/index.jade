include ../layout.jade



.manuallyAdd.right
  a.btn.right(href='/bands/new') Add band

div
  .allSearchResults.row
    each x in bands
        div(class='col s12 m6 l4')
          div(class='card')
            div(class='card-image waves effect waves-block waves-light')
              img(class='activator', src=x.img)
            div(class='card-content')
              span(class='card-title flow-text activator')=x.name
                i(class="material-icons right") more_vert
              if x.dates.length > 0 || x.tourdates > 0
                p On Tour Now!
            div(class='card-reveal')
              span(class='card-title')
                a(href='/bands/#{x.id}') Show Band
                i(class='material-icons right') close


